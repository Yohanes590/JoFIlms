{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/sign-up",
      "destination": "/index.html"
    },
    {
      "source": "/sign-in",
      "destination": "/index.html"
    },
    {
      "source": "/detail",
      "destination": "/index.html"
    },
    {
      "source": "/user-option/tv-show",
      "destination": "/index.html"
    },
    {
      "source": "/user-option/movie",
      "destination": "/index.html"
    },
    {
      "source": "/user-option/upcoming",
      "destination": "/index.html"
    },
    {
      "source": "/user-option/live-show",
      "destination": "/index.html"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
